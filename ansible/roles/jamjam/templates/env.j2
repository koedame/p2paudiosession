# jamjam environment configuration
# Generated by Ansible - Do not edit manually

# Logging
RUST_LOG={{ jamjam_rust_log }}

# Echo Server
ECHO_DELAY_MS={{ jamjam_echo_delay_ms }}
ECHO_PUBLIC_ADDR={{ jamjam_echo_public_addr }}

# Cloudflare Tunnel
{% if jamjam_cloudflare_tunnel_token %}
CLOUDFLARE_TUNNEL_TOKEN={{ jamjam_cloudflare_tunnel_token }}
{% else %}
# CLOUDFLARE_TUNNEL_TOKEN not set - cloudflared will not start
CLOUDFLARE_TUNNEL_TOKEN=
{% endif %}

{% if r2_log_upload_enabled | default(false) %}
# R2 Storage
R2_ACCESS_KEY_ID={{ r2_access_key_id | default('') }}
R2_SECRET_ACCESS_KEY={{ r2_secret_access_key | default('') }}
R2_ACCOUNT_ID={{ r2_account_id | default('') }}
R2_BUCKET_NAME={{ r2_bucket_name | default('jamjam-logs') }}
{% endif %}
