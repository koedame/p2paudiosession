{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "jamjam",
  "version": "0.1.0",
  "identifier": "com.jamjam.app",
  "build": {
    "beforeDevCommand": "cd ../ui && npm install && npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "cd ../ui && npm install && npm run build",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "jamjam - P2P Audio",
        "width": 900,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 600,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
